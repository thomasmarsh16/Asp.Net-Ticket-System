@model IEnumerable<aspNetCoreTicketSystem.Models.Project>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var item in Model)
{
    <div class="card shadow mb-4">
        <!-- Card Header - Dropdown -->
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">@item.ProjectName</h6>
            <div class="dropdown no-arrow">
                <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                    <div class="dropdown-header">Project Actions:</div>
                    <a class="dropdown-item" href="/Project/Edit/@item.ProjectId">Edit</a>
                    <a class="dropdown-item" href="/Project/AddWorker/@item.ProjectId">Viewers</a>
                    <a class="dropdown-item" href="/Project/Details/@item.ProjectId">Project Tasks</a>
                    <a class="dropdown-item" href="/Project/Delete/@item.ProjectId">Delete</a>
                </div>
            </div>
        </div>
        <!-- Card Body -->
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    <label>Description</label>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.ProjectDescription)
                </dd>
                <dt class="col-sm-2">
                    <label>Start Date</label>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.StartDate)
                </dd>
                <dt class="col-sm-2">
                    <label>Completion Date</label>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.CompletionDate)
                </dd>
            </dl>
        </div>
    </div>
}